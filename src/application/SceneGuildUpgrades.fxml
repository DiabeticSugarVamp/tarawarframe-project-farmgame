<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="gamePane" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneController">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="gameTopText" text="Day: " />
            <Label styleClass="gameTopText" text="Actions: " />
            <Label styleClass="gameTopText" text="Money: " />
            <Label styleClass="gameTopText" text="Next Deadline: " />
         </children>
      </HBox>
   </top>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label styleClass="gameText" text="Super Watering Can: watering plants consumes no action." wrapText="true" GridPane.columnIndex="1" />
            <Label styleClass="gameText" text="Trusty Truck: travelling to the guild office consumes no action." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label styleClass="gameText" text="Tractor: Harvesting crops consumes no action." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <CheckBox fx:id="upgradeOwnedCan" mnemonicParsing="false" styleClass="gameText" text="Owned" GridPane.halignment="CENTER" />
            <CheckBox fx:id="upgradeOwnedTruck" mnemonicParsing="false" styleClass="gameText" text="Owned" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <CheckBox fx:id="upgradeOwnedTractor" mnemonicParsing="false" styleClass="gameText" text="Owned" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </center>
   <bottom>
      <Label onMouseClicked="#switchToSceneGuild" styleClass="gameBottomOptionText" stylesheets="@application.css" text="1. Go back" BorderPane.alignment="CENTER_LEFT" />
   </bottom>
</BorderPane>
