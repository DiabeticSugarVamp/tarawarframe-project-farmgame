<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="gamePane" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneController">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="gameTopText" text="Day: " />
            <Label styleClass="gameTopText" text="Actions: " />
            <Label styleClass="gameTopText" text="Money: " />
            <Label styleClass="gameTopText" text="Next Deadline: " />
         </children>
      </HBox>
   </top>
   <bottom>
      <VBox prefHeight="200.0" prefWidth="1024.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="gameBottomOptionText" stylesheets="@application.css" text="1. Plant seeds (-1 action)" />
            <Label styleClass="gameBottomOptionText" stylesheets="@application.css" text="2. Harvest crops (-1 action)" />
            <Label styleClass="gameBottomOptionText" stylesheets="@application.css" text="3. Water crops (-1 action)" />
            <Label styleClass="gameBottomOptionText" stylesheets="@application.css" text="4. Use fertilizer (-1 action)" />
            <Label onMouseClicked="#switchToSceneFarmNavigation" styleClass="gameBottomOptionText" stylesheets="@application.css" text="5. Go back" />
         </children>
      </VBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="gameText" text="Total crops planted: " />
            <Label styleClass="gameText" text="Bronze crops ready to harvest: " />
            <Label styleClass="gameText" text="Silver crops ready to harvest: " />
            <Label styleClass="gameText" text="Gold crops ready to harvest: " />
            <Label styleClass="gameText" text="Bronze crops growing: " />
            <Label styleClass="gameText" text="Silver crops growing: " />
            <Label styleClass="gameText" text="Gold crops growing: " />
            <Label styleClass="gameText" text="Bronze crop seeds: " />
            <Label styleClass="gameText" text="Silver crop seeds: " />
            <Label styleClass="gameText" text="Gold crop seeds: " />
         </children>
      </VBox>
   </center>
</BorderPane>
